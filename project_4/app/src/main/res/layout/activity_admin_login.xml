<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLogin"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buet Bus Service"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/buet"
        android:layout_marginTop="25dp"></TextView>

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/admin_login_logo"
        ></ImageView>


    <Button
        android:id="@+id/adminbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buet"
        android:text="Login with Admin Id"
        android:textSize="20dp"
        android:paddingVertical="10dp"></Button>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or Request with admin Id"
        android:layout_marginTop="10dp"></TextView>
</LinearLayout>