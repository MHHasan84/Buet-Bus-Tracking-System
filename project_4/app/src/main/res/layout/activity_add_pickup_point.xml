<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPickupPoint"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/add_pickup_point_top_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add Pickup Point"
        android:textSize="30dp"
        android:background="@color/buet"
        android:textColor="@color/white"
        android:gravity="center">
    </TextView>

    <EditText
        android:id="@+id/pickup_point_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pickup Point Name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp">
    </EditText>
    
    <TimePicker
        android:id="@+id/pickup_point_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner">
    </TimePicker>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="90dp">

        <Button
            android:id="@+id/add_pickup_point_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:backgroundTint="@color/buet"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:textSize="20dp"
            android:paddingVertical="10dp">
        </Button>

        <Button
            android:id="@+id/add_pickup_point_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/buet"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:textSize="20dp"
            android:paddingVertical="10dp">
        </Button>

    </LinearLayout>


</LinearLayout>