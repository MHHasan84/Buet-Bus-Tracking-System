<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/removeBus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/remove"
            android:layout_alignParentLeft="true">
        </ImageView>

        <ImageView
            android:id="@+id/editBus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/pencil"
            android:layout_toRightOf="@+id/removeBus"
            android:layout_marginLeft="6dp">
        </ImageView>
        
        <TextView
            android:id="@+id/busRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Route"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/buet"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"></TextView>
        
        <ImageView
            android:id="@+id/busImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bus_front"
            android:layout_below="@+id/busRoute"
            android:layout_centerHorizontal="true"></ImageView>
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>