<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverTrackActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="From"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="@color/buet">

        </TextView>

        <EditText
            android:id="@+id/from_lat_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="latitude"
            android:gravity="center_horizontal">
        </EditText>

        <EditText
            android:id="@+id/from_lon_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="longitude"
            android:gravity="center_horizontal">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="To"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="@color/buet">

        </TextView>

        <EditText
            android:id="@+id/to_lat_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="latitude"
            android:gravity="center_horizontal">
        </EditText>

        <EditText
            android:id="@+id/to_lon_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="longitude"
            android:gravity="center_horizontal">
        </EditText>


    </LinearLayout>

    <Button
        android:id="@+id/road_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:backgroundTint="@color/buet"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"></Button>

    <Button
        android:id="@+id/road_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:backgroundTint="@color/buet"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"></Button>

    <Button
        android:id="@+id/road_set_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:backgroundTint="@color/buet"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"></Button>

    <SeekBar
        android:id="@+id/road_seek_bar"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </SeekBar>

    <TextView
        android:id="@+id/show_pos_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </TextView>

</LinearLayout>