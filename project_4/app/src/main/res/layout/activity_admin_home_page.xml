<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomePage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/buet"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:05 AM"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_margin="3dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday June 20"
            android:textColor="@android:color/white"
            android:layout_margin="3dp"
            android:alpha="0.7"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buet Office"
            android:textColor="@android:color/white"
            android:layout_margin="3dp"
            android:alpha="0.7"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@color/cardview_shadow_end_color"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buses"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                ></TextView>

            <ImageView
                android:id="@+id/buses"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bus"></ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@color/cardview_shadow_end_color"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Bus"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                ></TextView>

            <ImageView
                android:id="@+id/add_bus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bus"></ImageView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@color/cardview_shadow_end_color"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Bus"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                ></TextView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bus"></ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="@color/cardview_shadow_end_color"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                ></TextView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/route"></ImageView>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>