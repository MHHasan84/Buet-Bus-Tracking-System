<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSignin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign In"
        android:textSize="30dp"
        android:background="@color/buet"
        android:textColor="@color/white"
        android:gravity="center">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginHorizontal="20dp">


        <EditText
            android:id="@+id/user_signin_username_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username"
            >
        </EditText>

        <EditText
            android:id="@+id/user_signin_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:layout_marginTop="10dp">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <Button
                android:id="@+id/user_signin_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SignIn"
                android:backgroundTint="@color/buet"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:textSize="20dp"
                android:paddingVertical="10dp">
            </Button>

            <Button
                android:id="@+id/user_signin_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:backgroundTint="@color/buet"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                android:textSize="20dp"
                android:paddingVertical="10dp">
            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>