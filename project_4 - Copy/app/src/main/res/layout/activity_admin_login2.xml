<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLogin2"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Admin Id and Password"
        android:textSize="20dp"
        android:textColor="@color/buet"
        android:layout_marginVertical="20dp"
        android:textStyle="normal"
        android:paddingTop="30dp"></TextView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/admin_login_logo_2"></ImageView>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Admin Id"
        android:paddingLeft="15dp"
        android:textSize="20dp"
        android:layout_marginVertical="5dp"
        ></EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:textSize="20dp"
        android:layout_marginVertical="5dp"></EditText>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_gravity="left"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"></TextView>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:backgroundTint="@color/buet"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:paddingVertical="10dp"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or link account from biis"></TextView>

</LinearLayout>