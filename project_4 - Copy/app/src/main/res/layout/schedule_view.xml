<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:backgroundTint="@color/shadow"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/degree"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/degree"></ImageView>

            <TextView
                android:id="@+id/pickup_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College Gate Bus Stand"
                android:layout_alignRight="@+id/degree"
                android:textColor="@color/buet"
                android:textStyle="bold"
                android:textSize="17dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/pickup_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="06:15 AM"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/buet"
                android:textSize="20dp"
                ></TextView>

        </LinearLayout>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>