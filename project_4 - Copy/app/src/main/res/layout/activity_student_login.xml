<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentLogin"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/student_login"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="20dp"></ImageView>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Student Id"></EditText>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Password"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_gravity="left"
        android:layout_marginLeft="60dp"></TextView>

    <Button
        android:id="@+id/student_login"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/buet"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:textSize="20dp"></Button>



</LinearLayout>